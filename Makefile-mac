NAME        := so_long


SRC        := main.c movement.c paint_functions.c solong.c validation.c

OBJ        := $(SRC:%.c=%.o)

CC          := gcc 
CFLAGS      := -Wall -Wextra -Werror #-fsanitize=address -g3

MLX := mlx/libmlx.a

all: $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -Imlx -c $< -o $@

$(MLX):
	$(MAKE) -C $(@D)



$(NAME): $(OBJ) $(MLX)
	$(CC) $(OBJ) -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)




RM          := rm -f


clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re:
	$(MAKE) fclean
	$(MAKE) all

.PHONY: clean fclean re
.SILENT:
